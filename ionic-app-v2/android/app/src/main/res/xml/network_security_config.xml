<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Configuration pour le développement : autoriser HTTP en local -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Autoriser localhost et IP locale -->
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">192.168.1.133</domain>
        <!-- Autoriser tout le réseau local (192.168.x.x) -->
        <domain includeSubdomains="true">192.168.0.0/16</domain>
    </domain-config>
    
    <!-- Base configuration pour les domaines externes (HTTPS obligatoire) -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>

{
  "name": "backend-api",
  "version": "1.0.0",
  "description": "API Backend pour l'application de découverte audio guide de la Côte d'Ivoire",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc && copyfiles -u 1 src/config/firebase-service-account.json dist/config",
    "start": "node dist/index.js",
    "seed": "npx tsx scripts/seed.ts",
    "seed:complete": "npx tsx scripts/seed-complete.ts",
    "migrate:advanced": "npx tsx scripts/migrate-to-advanced.ts",
    "backup": "npx tsx scripts/export-data.ts",
    "restore": "npx tsx scripts/import-data.ts",
    "restore:file": "npx tsx scripts/import-data.ts",
    "test": "node test-api.js",
    "test:endpoints": "node test-all-endpoints.js",
    "test:advanced": "node test-advanced-api.js",
    "test:simple": "node test-simple.js",
    "test:mongodb": "node test-mongodb-connection.js",
    "test:attractions": "node test-attractions.js",
    "test:seed": "node test-seed-complete.js",
    "validate": "node validate-system.js",
    "validate:full": "npm run validate && npm run test:advanced",
    "health:check": "npm run validate:full && echo 'Système opérationnel!'",
    "deploy:check": "npm run build && npm run validate:full",
    "deploy": "npm run build && echo 'Ready for deployment to Render'",
    "install:advanced": "npm install && npm run migrate:advanced"
  },
  "keywords": [
    "cote-divoire",
    "audio-guide",
    "api",
    "tourism"
  ],
  "author": "Votre équipe",
  "type": "commonjs",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/bull": "^4.10.0",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/geolib": "^2.0.6",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.3.0",
    "@types/node-cron": "^3.0.11",
    "copyfiles": "^2.4.1",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@turf/turf": "^6.5.0",
    "bcryptjs": "^3.0.2",
    "bull": "^4.12.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.0.1",
    "express-winston": "^4.2.0",
    "firebase-admin": "^13.5.0",
    "geolib": "^3.3.4",
    "helmet": "^8.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "ml-kmeans": "^6.0.0",
    "mongodb": "^6.9.0",
    "mongoose": "^8.18.0",
    "mongoose-paginate-v2": "^1.8.3",
    "multer": "^2.0.2",
    "node-cron": "^3.0.3",
    "redis": "^4.6.13",
    "simple-statistics": "^7.8.8",
    "turf": "^3.0.14",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  }
}
